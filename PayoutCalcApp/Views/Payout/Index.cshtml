@using System.Web.Mvc.Html;
@model PayoutCalcApp.Models.HoursViewModel

@using (Ajax.BeginForm("CalculatePayout", "Payout", new AjaxOptions
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "totalPayout",
    OnSuccess = "checkErrorMessage",
    OnBegin = "resetErrorMessage"
}))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedStartTimeHours, new { @class = "col-xs-3" })
        <div class="col-xs-9">
            @Html.DropDownListFor(m => m.SelectedStartTimeHours, new SelectList(Model.StartTimeHours, "Value", "Text"), new { @class = "form-control" })@Html.Raw("&nbsp")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedBedTimeHours, new { @class = "col-xs-3" })
        <div class="col-xs-9">
            @Html.DropDownListFor(m => m.SelectedBedTimeHours, new SelectList(Model.BedTimeHours, "Value", "Text"), new { @class = "form-control" })@Html.Raw("&nbsp")
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedEndTimeHours, new { @class = "col-xs-3" })
        <div class="col-xs-9">
            @Html.DropDownListFor(m => m.SelectedEndTimeHours, new SelectList(Model.EndTimeHours, "Value", "Text"), new { @class = "form-control" })@Html.Raw("&nbsp")
        </div>
    </div>
    <div>
        <input type="submit" class="btn btn-success" value="Calculate Pay" />
    </div>
}
<div id="errorMessage"></div>
@Html.Partial("_TotalPayout", Model)
